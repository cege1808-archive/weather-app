<!-- Navbar -->
<div class="navbar-fixed">
  <nav class="indigo">
    <div class="nav-wrapper">
    
      <form>
        <div class="input-field">
          <input type="search" name="keyword" required>
          <label for="keyword"><i class="material-icons">search</i></label>
          <i class="material-icons">close</i>
        </div>
      </form>

      
    </div>
<a target="_blank" href="https://github.com/cege1808/weather_app"><i class="fa fa-github"></i></a>
<div class="clear"></div>
  </nav>
</div>

<!-- Content -->
<div class="section no-pad-bot indigo lighten-5">
  <div class="container">

    <div class="row search">
      <div class="searchList center indigo lighten-5"></div>
    </div>

    <div class="row title">
      <h1 class="header center indigo-text">RAIN <span class="black-text">or </span><span class="orange-text">SHINE</span></h1>
      <h5 class="center">
        search for a location up there
      </h5>
    </div>

    <div class="row info">
      <div class="displayWeather center"></div>
    </div>

  </div>
</div>


<!-- Card Template -->
<script id="results-template" type="text/x-handlebars-template">
  <div class="card col s6 offset-s3">

    <div class="card-image activator">
      <i class="material-icons right main">more_vert</i>

      <div class="col s6 icon">
        <div class="placeholder-icon"></div>
      </div>

      <div class="col s6 temp">
        <h1>{{temp_c}}&deg;</h1><h4>C</h4>
      </div>

    </div>

    <div class="card-content col s12">
     <h4 class="indigo-text">{{display_location.full}}</h4>
     <h5 >{{weather}}</h5>
   </div>

   <div class="card-reveal valign-wrapper center">

    <span class="card-title grey-text text-darken-4"><i class="material-icons right">close</i><br/>More Information</span>

    <div class="valign top">
      <h4>UV:&nbsp;</h4>
      <h5>{{UV}}</h5>
    </div>

    <div class="valign">
      <h4>Dew Point:&nbsp;</h4>
      <h5>{{dewpoint_c}}&deg;C</h5>
    </div>

    <div class="valign">
      <h4>Visibility:&nbsp;</h4>
      <h5>{{visibility_km}} KM</h5>
    </div>

    <div class="valign">
      <h4>Wind:&nbsp;</h4>
      <h5>{{wind-dir}}&nbsp;at {{wind_kph}} KPH</h5>
    </div>
  </div>
</div>
</script>

<!-- Icon Template -->
<script id="icon-template" type="text/x-handlebars-template">
  <i id="icon" class="wi wi-{{icon}}"></i>
</script>